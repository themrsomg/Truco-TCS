<views:GameBasePage x:Class="TrucoClient.Views.GameTwoPlayersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrucoClient"
      xmlns:views="clr-namespace:TrucoClient.Views"
      mc:Ignorable="d" 
      xmlns:language="clr-namespace:TrucoClient.Properties.Langs"
      Title="{x:Static language:Lang.GlobalTextTrucoArg}" FontFamily="Book Antiqua" FontSize="20" Height="800" Width="1024">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Top">
                
                <Button x:Name="btnBack" Click="ClickBack" Content="{x:Static language:Lang.GlobalTextBack}" Cursor="Hand" Margin="10,10,15,10" 
                        FontSize="20" VerticalAlignment="Center">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="10" Background="#FFFF9595" BorderThickness="2" BorderBrush="#FFBF3333" Padding="15,5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Opacity" Value="1"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.7"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Border Background="#DDD" Padding="15,5" Margin="5" VerticalAlignment="Center" CornerRadius="5">
                    <StackPanel>
                        
                        <TextBlock Text="{x:Static language:Lang.GameTextScoreboard}" FontSize="18" HorizontalAlignment="Center" FontWeight="Bold"/>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="{x:Static language:Lang.TeamOne}" Margin="5,0"/>
                            <TextBlock x:Name="blckScoreTeam1" Text="0" FontWeight="Bold" Margin="0,0,10,0"/>
                            <TextBlock Text="{x:Static language:Lang.TeamTwo}" Margin="5,0"/>
                            <TextBlock x:Name="blckScoreTeam2" Text="0" FontWeight="Bold"/>
                        </StackPanel>
                        
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5">
                <Border Background="#CCC" Width="60" Height="60" Margin="5" CornerRadius="30" BorderBrush="#FFD700" 
                        BorderThickness="2" HorizontalAlignment="Center">
                    <Image x:Name="imgRivalAvatar" Stretch="UniformToFill">
                        <Image.Clip>
                            <EllipseGeometry Center="30,30" RadiusX="30" RadiusY="30"/>
                        </Image.Clip>
                    </Image>
                </Border>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                    <Image Source="/Resources/back_card.png" Width="60" Height="90" Margin="5,0"/>
                    <Image Source="/Resources/back_card.png" Width="60" Height="90" Margin="5,0"/>
                    <Image Source="/Resources/back_card.png" Width="60" Height="90" Margin="5,0"/>
                </StackPanel>
            </StackPanel>

            <Grid Grid.Column="2" Width="200"/>
        </Grid>

        <Grid Grid.Row="1" Margin="50,20">
            <Border Background="#22000000" CornerRadius="50" BorderBrush="#11000000" BorderThickness="1">
                <TextBlock Text=" " HorizontalAlignment="Center" VerticalAlignment="Center" 
                           FontSize="30" Foreground="#33000000" FontWeight="Bold"/>
            </Border>

            <StackPanel x:Name="panelTableCards" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,0">

                <StackPanel x:Name="panelEnvidoOptions" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                            Background="#AAFFFFFF" Orientation="Vertical" Visibility="Collapsed" Margin="5">
                    
                    <TextBlock x:Name="blckEnvidoCaller" HorizontalAlignment="Center" Margin="5" FontSize="14" FontWeight="Bold"/>
                    
                    <Button x:Name="btnCallEnvido" Content="Envido" Margin="5" Cursor="Hand" Foreground="Black" Padding="10,5">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="8" Background="#00F7FF" BorderThickness="1" BorderBrush="#00D4FF">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Opacity" Value="1"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.7"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button x:Name="btnCallRealEnvido" Content="Real Envido" Margin="5" Cursor="Hand" Foreground="Black" Padding="10,5">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="8" Background="#34E4EA" BorderThickness="1" BorderBrush="#0EB1D2">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Opacity" Value="1"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.7"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button x:Name="btnCallFaltaEnvido" Content="Falta Envido" Margin="5" Cursor="Hand" Foreground="Black" Padding="10,5">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="8" Background="#19CAD0" BorderThickness="1" BorderBrush="#2B9EB5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Opacity" Value="1"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.7"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button x:Name="btnEnvidoRespondQuiero" Content="Quiero" Margin="5" Cursor="Hand" Foreground="White" Padding="10,5">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="8" Background="#FF008148" BorderThickness="1" BorderBrush="#FF006E3C">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Opacity" Value="1"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.7"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button x:Name="btnEnvidoRespondNoQuiero" Content="No Quiero" Margin="5" Cursor="Hand" Foreground="White" Padding="10,5">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="8" Background="#FFEF2917" BorderThickness="1" BorderBrush="#FFB31E10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Opacity" Value="1"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.7"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <StackPanel x:Name="panelFlorOptions" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                            Background="#AAFFFFFF" Orientation="Vertical" Visibility="Collapsed" Margin="5">
                    
                    <TextBlock x:Name="blckFlorCaller" HorizontalAlignment="Center" Margin="5" FontSize="14" FontWeight="Bold"/>
                    
                    <Button x:Name="btnCallFlor" Content="Flor" Margin="5" Cursor="Hand" Foreground="Black" Padding="10,5">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="8" Background="#FFF1DABF" BorderThickness="1" BorderBrush="#FFDDC8AF">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Opacity" Value="1"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.7"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="btnCallContraFlor" Content="Contra Flor" Margin="5" Cursor="Hand" Foreground="Black" Padding="10,5">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="8" Background="#FFFF9B71" BorderThickness="1" BorderBrush="#FFD07D5A">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Opacity" Value="1"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.7"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <StackPanel x:Name="panelBetOptions" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                            Background="#AAFFFFFF" Orientation="Vertical" Visibility="Collapsed" Margin="5">
                    
                    <TextBlock x:Name="blckTrucoCaller" HorizontalAlignment="Center" Margin="5" FontSize="14" FontWeight="Bold"/>
                    
                    <Button x:Name="btnCallTruco" Content="Truco" Margin="5" Cursor="Hand" Foreground="Black" Padding="10,5">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="8" Background="#FAE7DF" BorderThickness="1" BorderBrush="#BBABA1">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Opacity" Value="1"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.7"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button x:Name="btnRespondQuiero" Content="Quiero" Margin="5" Cursor="Hand" Foreground="White" Padding="10,5">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="8" Background="#FF008148" BorderThickness="1" BorderBrush="#FF006E3C">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Opacity" Value="1"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.7"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button x:Name="btnRespondNoQuiero" Content="No Quiero" Margin="5" Cursor="Hand" Foreground="White" Padding="10,5">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="8" Background="#FFEF2917" BorderThickness="1" BorderBrush="#FFB31E10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Opacity" Value="1"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.7"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button x:Name="btnGoToDeck" Content="Ir al Mazo" Margin="5" Visibility="Collapsed" Cursor="Hand" Foreground="White" Padding="10,5">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="8" Background="#303036" BorderThickness="1" BorderBrush="#050401">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Opacity" Value="1"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.7"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button x:Name="btnStartFlor" Content="Flor" Margin="5" Visibility="Collapsed" Cursor="Hand" Foreground="Black" Padding="10,5">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="8" Background="#BFA89E" BorderThickness="1" BorderBrush="#8B786D">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Opacity" Value="1"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.7"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Margin="10,10,10,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="5,0,5,5" VerticalAlignment="Bottom">
                <Button Content="{x:Static language:Lang.GameTextGestures}" Width="80" Height="40" Click="ClickOpenGesturesMenu" Margin="0,0,0,10">
                    <Button.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="👍" Click="ClickGesture"/>
                            <MenuItem Header="😂" Click="ClickGesture"/>
                            <MenuItem Header="😡" Click="ClickGesture"/>
                        </ContextMenu>
                    </Button.ContextMenu>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="8" Background="#FF2EF457" BorderThickness="2" BorderBrush="#FF03D400">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Opacity" Value="1"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.7"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Border Background="#CCC" Width="80" Height="80" Margin="5" CornerRadius="40" BorderBrush="#FFD700" 
                        BorderThickness="3">
                    <Image x:Name="imgPlayerAvatar" Stretch="UniformToFill">
                        <Image.Clip>
                            <EllipseGeometry Center="40,40" RadiusX="40" RadiusY="40"/>
                        </Image.Clip>
                    </Image>
                </Border>
            </StackPanel>

            <StackPanel x:Name="panelPlayerCards" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="20,10">
                <Image x:Name="imgPlayerCard1" Width="150" Height="225" Margin="10,5,10,20" RenderTransformOrigin="0.5,1" 
                       Cursor="Hand">
                    <Image.RenderTransform>
                        <RotateTransform Angle="-5"/>
                    </Image.RenderTransform>
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Opacity" Value="1"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>

                <Image x:Name="imgPlayerCard2" Width="150" Height="225" Margin="10,0,10,30" 
                       Cursor="Hand">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Opacity" Value="1"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
                <Image x:Name="imgPlayerCard3" Width="150" Height="225" Margin="10,5,10,20" RenderTransformOrigin="0.5,1" 
                       Cursor="Hand">
                    <Image.RenderTransform>
                        <RotateTransform Angle="5"/>
                    </Image.RenderTransform>
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Opacity" Value="1"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
            </StackPanel>

            <Border Grid.Column="2" Background="#EEE" Width="250" Height="220" CornerRadius="10" Padding="5" Margin="5" VerticalAlignment="Bottom">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="ChatMessagesPanel" />
                    </ScrollViewer>
                    
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,0">
                        <Grid Width="165" Height="30" Margin="0,0,5,0">

                            <TextBox x:Name="txtChatMessage" VerticalAlignment="Center" TextChanged="ChatMessageTextChanged" 
                                     Background="White" Foreground="Black" Padding="5,0,0,0" KeyDown="EnterKeyDown" FontSize="14">
                                <TextBox.Template>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="White" CornerRadius="8" BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="1" Padding="5">
                                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                                        </Border>
                                    </ControlTemplate>
                                </TextBox.Template>
                            </TextBox>
                            
                            <TextBlock x:Name="blckPlaceholder" Text="{x:Static language:Lang.GlobalTextWriteHere}" 
                                       Foreground="Gray" FontSize="14" VerticalAlignment="Center" Margin="8,0,0,0" IsHitTestVisible="False" Visibility="Visible"/>
                        </Grid>
                        <Button x:Name="btnSendMessage" Content="{x:Static language:Lang.GlobalTextSend}" Width="65" Height="30" Click="ClickSendMessage" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="8" Background="#FF5FE4FA" BorderThickness="1" BorderBrush="#FF3AB8CE">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Opacity" Value="1"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Opacity" Value="0.7"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Opacity" Value="0.5"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</views:GameBasePage>