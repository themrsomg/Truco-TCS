<Page x:Class="TrucoClient.Views.CreateGamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrucoClient.Views"
      mc:Ignorable="d" 
      xmlns:language="clr-namespace:TrucoClient.Properties.Langs"
      Title="{x:Static language:Lang.GameTextCreateMatch}" FontFamily="Book Antiqua" FontSize="30" Height="600" Width="800">

    <Border CornerRadius="40" BorderThickness="2" BorderBrush="#555" SnapsToDevicePixels="True">
        <Border.Background>
            <ImageBrush ImageSource="/Resources/wallpaper.png" Stretch="UniformToFill" Opacity="1"/>
        </Border.Background>
        
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" Opacity="0.6" ShadowDepth="0" Color="Black"/>
        </Border.Effect>
        
        <StackPanel Margin="0,50,0,0">
            
            <TextBlock Text="{x:Static language:Lang.GameTextCreateMatch}" FontSize="40" 
            Foreground="White" TextAlignment="Center" Margin="0,0,0,20"/>
            
            <StackPanel Margin="0,20,0,0" Orientation="Vertical" HorizontalAlignment="Center">
                
                <TextBlock Text="{x:Static language:Lang.PreGameTextMatchType}" Foreground="White" FontSize="25"/>
                
                <ComboBox x:Name="cbPrivacy" Width="200" SelectedIndex="0">
                    <ComboBoxItem Content="{x:Static language:Lang.PreGameTextPrivacyPublic}" Tag="public"/>
                    <ComboBoxItem Content="{x:Static language:Lang.PreGameTextPrivacyPrivate}" Tag="private"/>
                </ComboBox>

                <TextBlock Text="{x:Static language:Lang.PreGameTextNumberPlayers}" Foreground="White" FontSize="25" Margin="0,15,0,0"/>
                <ComboBox x:Name="cbPlayers" Width="200" SelectedIndex="0">
                    <ComboBoxItem Content="{x:Static language:Lang.PreGameTextTwoPlayers}" Tag="2"/>
                    <ComboBoxItem Content="{x:Static language:Lang.PreGameTextFourPlayers}" Tag="4"/>
                </ComboBox>
            </StackPanel>
            
            <StackPanel>
                <Button Click="ClickCreateMatch" Content="{x:Static language:Lang.GameTextCreateMatch}" 
                        Cursor="Hand" Width="300" Height="50" FontSize="30" Margin="0,40,0,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="10" Background="#FF5FE4FA" BorderThickness="2" BorderBrush="#FF3AB8CE">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Opacity" Value="1"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.7"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
            
            <Button Click="ClickBack" Content="{x:Static language:Lang.GlobalTextBack}" Cursor="Hand" 
                    Margin="0,60,40,30" FontSize="25" HorizontalAlignment="Right">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="#FFFF9595" BorderThickness="2" BorderBrush="#FFBF3333">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            
        </StackPanel>
    </Border>
</Page>