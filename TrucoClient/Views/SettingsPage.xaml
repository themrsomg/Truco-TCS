<Page x:Class="TrucoClient.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrucoClient"
      mc:Ignorable="d"
      xmlns:language="clr-namespace:TrucoClient.Properties.Langs"
      Title="{x:Static language:Lang.GlobalTextSettings}" Height="600" Width="800" FontFamily="Book Antiqua" FontSize="30">

    <Border CornerRadius="40" BorderThickness="2" BorderBrush="#555" SnapsToDevicePixels="True">
        <Border.Background>
            <ImageBrush ImageSource="/Resources/wallpaper.png" Stretch="UniformToFill" Opacity="1"/>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" Opacity="0.6" ShadowDepth="0" Color="Black"/>
        </Border.Effect>
        <StackPanel>
            <TextBlock Text="{x:Static language:Lang.GlobalTextSettings}" Margin="0,30,0,0" FontSize="40" Foreground="White"
                       HorizontalAlignment="Center"/>
            <StackPanel Margin="10,40,10,20" Width="600">
                <Button Click="ClickCredits" Content="{x:Static language:Lang.SettingsTextCredits}" Cursor="Hand" Margin="65,0,65,0" FontSize="40">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="10" Background="#FF2EF457" BorderThickness="2" BorderBrush="#FF03D400">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Click="ClickAbout" Content="{x:Static language:Lang.SettingsTextAbout}" Cursor="Hand" Margin="65,10,65,0" 
                        FontSize="40">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="10" Background="#FFF3C754" BorderThickness="2" BorderBrush="#FFDDA81C">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Click="ClickCards" Content="{x:Static language:Lang.CardsText}" Cursor="Hand" Margin="65,10,65,0" FontSize="40">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="10" Background="#9fcee9" BorderThickness="2" BorderBrush="#9fcee9">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="{x:Static language:Lang.SettingsTextVolume}" FontSize="40" Foreground="White" 
                                   HorizontalAlignment="Center" Margin="0,20,0,0"/>
                        <Button Click="ClickVolume" Cursor="Hand" Margin="0,10,0,0" FontSize="40" Height="120" Width="120">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="10" Background="Transparent" BorderThickness="2" BorderBrush="Transparent">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Grid>
                                <Image x:Name="imgVolumeIcon" Source="/Resources/app_logo.ico" Width="120" Height="120" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </Button>
                    </StackPanel>
                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="{x:Static language:Lang.SettingsTextLanguage}" FontSize="40" Foreground="White" 
                                   HorizontalAlignment="Center" Margin="0,20,0,0"/>
                        <ComboBox x:Name="cbLanguages" SelectionChanged="LanguageSelectionChanged" Cursor="Hand" Width="150" 
                                  HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="20" Padding="5">
                            <ComboBoxItem Content="{x:Static language:Lang.en}"/>
                            <ComboBoxItem Content="{x:Static language:Lang.es}"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>
            </StackPanel>
            <Button Click="ClickSave" Content="{x:Static language:Lang.GlobalTextSave}" Cursor="Hand" Margin="0,0,45,40" FontSize="30" 
                    HorizontalAlignment="Right" VerticalAlignment="Bottom">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="#FF5FE4FA" BorderThickness="2" BorderBrush="#FF3AB8CE" Padding="15,5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Border>
</Page>
