<Page x:Class="TrucoClient.Views.SplashPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrucoClient.Views"
      xmlns:language="clr-namespace:TrucoClient.Properties.Langs"
      mc:Ignorable="d" 
      d:DesignHeight="1200" d:DesignWidth="1200"
      Title="SplashPage"
      Background="Black">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image x:Name="imgGameLogo" Source="/Resources/Logos/logo_lotso_studios.png" 
                   Width="300" Height="300" 
                   Opacity="0">
                <Image.RenderTransform>
                    <ScaleTransform ScaleX="0.5" ScaleY="0.5" CenterX="150" CenterY="150"/>
                </Image.RenderTransform>
            </Image>
        </Border>
        
        <TextBlock Grid.Row="1" Text="{x:Static language:Lang.GlobalTextLoading}" Foreground="LightGray" FontSize="16" 
                   HorizontalAlignment="Center" Margin="0,0,0,20" Opacity="0"/>
    </Grid>
</Page>
