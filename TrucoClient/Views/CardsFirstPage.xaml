<Page x:Class="TrucoClient.Views.CardsFirstPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrucoClient.Views"
      mc:Ignorable="d" 
      xmlns:language="clr-namespace:TrucoClient.Properties.Langs"
      Title="{x:Static language:Lang.CardsText}" Height="600" Width="800" FontFamily="Book Antiqua" FontSize="30">

    <Border CornerRadius="40" BorderThickness="2" BorderBrush="#555" SnapsToDevicePixels="True">
        <Border.Background>
            <ImageBrush ImageSource="/Resources/wallpaper_main.png" Stretch="UniformToFill" Opacity="1"/>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" Opacity="0.6" ShadowDepth="0" Color="Black"/>
        </Border.Effect>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="{x:Static language:Lang.CardsText}" Margin="0,30,0,10" FontSize="40" Foreground="White"
                           HorizontalAlignment="Center"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,15">

                    <StackPanel Orientation="Vertical" Margin="5,0" Width="120">
                        <Image Source="/Resources/Cards/club_1.png" Height="140"/>
                        <TextBlock Text="{x:Static language:Lang.OneClub}" Foreground="White" FontSize="16" 
                                   HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="5,0" Width="120">
                        <Image Source="/Resources/Cards/club_2.png" Height="140"/>
                        <TextBlock Text="{x:Static language:Lang.TwoClub}" Foreground="White" FontSize="16" 
                                   HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="5,0" Width="120">
                        <Image Source="/Resources/Cards/club_3.png" Height="140"/>
                        <TextBlock Text="{x:Static language:Lang.ThreeClub}" Foreground="White" FontSize="16" 
                                   HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="5,0" Width="120">
                        <Image Source="/Resources/Cards/club_4.png" Height="140"/>
                        <TextBlock Text="{x:Static language:Lang.FourClub}" Foreground="White" FontSize="16" 
                                   HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="5,0" Width="120">
                        <Image Source="/Resources/Cards/club_5.png" Height="140"/>
                        <TextBlock Text="{x:Static language:Lang.FiveClub}" Foreground="White" FontSize="16" 
                                   HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">

                    <StackPanel Orientation="Vertical" Margin="5,0" Width="120">
                        <Image Source="/Resources/Cards/club_6.png" Height="140"/>
                        <TextBlock Text="{x:Static language:Lang.SixClub}" Foreground="White" FontSize="16" 
                                   HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="5,0" Width="120">
                        <Image Source="/Resources/Cards/club_7.png" Height="140"/>
                        <TextBlock Text="{x:Static language:Lang.SevenClub}" Foreground="White" FontSize="16" 
                                   HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="5,0" Width="120">
                        <Image Source="/Resources/Cards/club_10.png" Height="140"/>
                        <TextBlock Text="{x:Static language:Lang.TenClub}" Foreground="White" FontSize="16" 
                                   HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="5,0" Width="120">
                        <Image Source="/Resources/Cards/club_11.png" Height="140"/>
                        <TextBlock Text="{x:Static language:Lang.ElevenClub}" Foreground="White" FontSize="16" 
                                   HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="5,0" Width="120">
                        <Image Source="/Resources/Cards/club_12.png" Height="140"/>
                        <TextBlock Text="{x:Static language:Lang.TwelveClub}" Foreground="White" FontSize="16" 
                                   HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Click="ClickBack" Content="{x:Static language:Lang.GlobalTextBack}" 
                        Cursor="Hand" Margin="0,30,30,20" FontSize="25" HorizontalAlignment="Right" Width="150" Height="50">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="10" Background="#FFFF9595" BorderThickness="2" BorderBrush="#FFBF3333">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Click="ClickNextPage" Content="{x:Static language:Lang.NextPage}" 
                        Cursor="Hand" Margin="0,30,30,20" FontSize="25" HorizontalAlignment="Right" Width="150" Height="50">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="10" Background="#FF2EF457" BorderThickness="2" BorderBrush="#FF2EF457">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Page>
