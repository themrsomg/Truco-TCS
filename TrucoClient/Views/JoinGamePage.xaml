<Page x:Class="TrucoClient.Views.JoinGamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrucoClient"
      mc:Ignorable="d" 
      xmlns:language="clr-namespace:TrucoClient.Properties.Langs"
      Title="{x:Static language:Lang.JoinGameTextJoinGame}" FontFamily="Book Antiqua" FontSize="30" Height="400" Width="600">

    <Border CornerRadius="40" BorderThickness="2" BorderBrush="#555" SnapsToDevicePixels="True">
        <Border.Background>
            <ImageBrush ImageSource="/Resources/wallpaper.png" Stretch="UniformToFill" Opacity="1"/>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" Opacity="0.6" ShadowDepth="0" Color="Black"/>
        </Border.Effect>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <TextBlock Text="{x:Static language:Lang.JoinGameTextJoinGame}" FontSize="36" FontWeight="Bold" 
                       Foreground="White" TextAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock Text="{x:Static language:Lang.JoinGameTextEnterCode}" FontSize="22" Foreground="White" 
                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBox x:Name="txtCode" Width="300" Height="40" FontSize="20" HorizontalAlignment="Center" 
                     VerticalAlignment="Center" Background="White" Foreground="Black" TextAlignment="Center" 
                     MaxLength="6" KeyDown="EnterKeyDown">
                <TextBox.Template>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="White" CornerRadius="8" BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="2" Padding="5">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="btnJoin" Click="ClickJoin" Content="{x:Static language:Lang.JoinGameTextJoin}" Cursor="Hand" 
                        Width="120" Height="50" FontSize="22" Margin="0,0,20,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="10" Background="#FF2EF457" BorderThickness="2" BorderBrush="#FF03D400">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Click="ClickBack" Content="{x:Static language:Lang.GlobalTextBack}" Cursor="Hand" Width="120" 
                        Height="50" FontSize="22">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="10" Background="#FFFF9595" BorderThickness="2" BorderBrush="#FFBF3333">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Page>
