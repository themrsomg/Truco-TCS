<Page x:Class="TrucoClient.Views.LobbyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrucoClient.Views"
      mc:Ignorable="d" 
      xmlns:language="clr-namespace:TrucoClient.Properties.Langs"
      Title="{x:Static language:Lang.PreGameTextGame}" FontFamily="Book Antiqua" FontSize="30" Height="600" Width="800">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock x:Name="txtLobbyCode" Grid.Row="0" Grid.ColumnSpan="2" Text="" FontSize="20" 
                    Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        </StackPanel>
        <TextBlock x:Name="txtLobbyTitle" Grid.Row="0" Grid.ColumnSpan="2" Text="Lobby" FontSize="30" 
                    Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
            <TextBlock Text="Jugadores en sala" Foreground="White" FontSize="22" Margin="0,0,0,15"/>
            <ItemsControl x:Name="PlayersList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Image Width="50" Height="50" Source="{Binding AvatarUri}" Margin="0,0,10,0" 
                                   Stretch="UniformToFill"/>
                            <TextBlock Text="{Binding Username}" VerticalAlignment="Center" Foreground="White" 
                                       FontSize="18"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <TextBlock Text="Chat del Lobby" Foreground="White" FontSize="22" Margin="0,0,0,20"/>
            <ScrollViewer x:Name="ChatScroll" Background="White" VerticalScrollBarVisibility="Auto" Height="300" 
                          Margin="0,0,0,10">
                <StackPanel x:Name="ChatMessagesPanel" Margin="5"/>
            </ScrollViewer>
            <StackPanel Orientation="Horizontal">
                <Grid Width="360" Height="40" Margin="0,0,10,0">
                    <TextBox x:Name="txtChatMessage" Width="360" Height="40" FontSize="22" TextChanged="txtChatMessageTextChanged" 
                             HorizontalAlignment="Left" KeyDown="EnterKeyDown">
                        <TextBox.Template>
                            <ControlTemplate TargetType="TextBox">
                                <Border Background="White" CornerRadius="8" BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="2" Padding="5">
                                    <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
                        </TextBox.Template>
                    </TextBox>
                    <TextBlock x:Name="blckPlaceholder" Text="{x:Static language:Lang.GlobalTextWriteHere}" Height="30" 
                               Foreground="Gray" FontSize="22" Margin="8,2,30,0" VerticalAlignment="Center" IsHitTestVisible="False" Visibility="Visible"/>
                </Grid>
                <Button x:Name="btnSendMessage" Content="{x:Static language:Lang.GlobalTextSend}" FontSize="22" Click="ClickSendMessage" 
                        Cursor="Hand" Height="40" HorizontalAlignment="Left" Margin="0,10,0,10">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="10" Background="#FF5FE4FA" BorderThickness="2" BorderBrush="#FF3AB8CE">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" 
                    Margin="0,5,5,20">
            <Button Click="ClickExit" Content="{x:Static language:Lang.GlobalTextExit}" Cursor="Hand" Margin="0,0,20,0" 
                    FontSize="22">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="#FFFF9595" BorderThickness="2" BorderBrush="#FFBF3333" Padding="10,5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button x:Name="btnStart" Click="ClickStartGame" Content="{x:Static language:Lang.GlobalTextStartGame}" 
                    Cursor="Hand" FontSize="22">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="#FF2EF457" BorderThickness="2" BorderBrush="#FF03D400" Padding="10,5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Page>
