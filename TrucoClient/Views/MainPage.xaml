<Page x:Class="TrucoClient.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrucoClient"
      mc:Ignorable="d"
      xmlns:language="clr-namespace:TrucoClient.Properties.Langs"
      Title="{x:Static language:Lang.GlobalTextHome}" FontFamily="Book Antiqua" FontSize="30" Height="600" Width="800">
   
    <StackPanel>        
        <Button Click="ClickLogOut" Content="{x:Static language:Lang.GlobalTextLogOut}" Cursor="Hand" 
                Margin="0,30,30,0" FontSize="25" HorizontalAlignment="Right">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="10" Background="#FFFF9595" BorderThickness="2" BorderBrush="#FFBF3333">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Grid>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <StackPanel>
                    <Button Click="ClickSettings" Cursor="Hand" Margin="30,10,65,0" Width="60" Height="60" FontSize="30">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="10" BorderThickness="2">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Grid>
                            <TextBlock Text="" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,0,0"/>
                            <Image Source="/Resources/Logos/logo_settings.png" Width="60" Height="60" HorizontalAlignment="Left" 
                                   VerticalAlignment="Center"/>
                        </Grid>
                    </Button>
                    <Button Content="{x:Static language:Lang.GlobalTextProfile}" Click="ClickProfile" Cursor="Hand" 
                            Margin="30,10,65,0" FontSize="30">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="10" Background="#FF5FE4FA" BorderThickness="2" BorderBrush="#FF3AB8CE">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Content="{x:Static language:Lang.GlobalTextFriends}" Click="ClickFriends" Cursor="Hand" 
                            Margin="30,10,65,600" FontSize="30">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="10" Background="#FF5FE4FA" BorderThickness="2" BorderBrush="#FF3AB8CE">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </StackPanel>
            <TextBlock Text="{x:Static language:Lang.GlobalTextHome}" FontSize="40" Foreground="White" HorizontalAlignment="Center"/>
            <StackPanel Margin="130">
                <Button Click="ClickMatch" Cursor="Hand" Margin="65,0,65,0" FontSize="40">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="10" Background="#FF2EF457" BorderThickness="2" BorderBrush="#FF03D400">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Grid>
                        <TextBlock Text="{x:Static language:Lang.MenuTextMatch}" VerticalAlignment="Center" 
                                   HorizontalAlignment="Left" Margin="60,0,0,0"/>
                        <Image Source="/Resources/Logos/logo_match.png" Width="45" Height="45" HorizontalAlignment="Left" 
                               VerticalAlignment="Center"/>
                    </Grid>
                </Button>
                <Button Click="ClickRankings" Cursor="Hand" Margin="65,10,65,0" FontSize="40">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="10" Background="#FFF3C754" BorderThickness="2" BorderBrush="#FFDDA81C">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Grid>
                        <TextBlock Text="{x:Static language:Lang.GlobalTextRankings}" VerticalAlignment="Center" 
                                   HorizontalAlignment="Left" Margin="60,0,0,0"/>
                        <Image Source="/Resources/Logos/logo_rankings.png" Width="45" Height="45" HorizontalAlignment="Left" 
                               VerticalAlignment="Center"/>
                    </Grid>
                </Button>
                <Button Click="ClickExit" Cursor="Hand" Margin="65,10,65,0" FontSize="40">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="10" Background="#FFFF9595" BorderThickness="2" BorderBrush="#FFBF3333">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Grid>
                        <TextBlock Text="{x:Static language:Lang.MenuTextExit}" VerticalAlignment="Center" 
                                   HorizontalAlignment="Left" Margin="60,0,0,0"/>
                        <Image Source="/Resources/Logos/logo_exit.png" Width="50" Height="50" HorizontalAlignment="Left" 
                               VerticalAlignment="Center"/>
                    </Grid>
                </Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/Resources/Logos/logo.png" Width="100" Height="100" Margin="690,150,0,0"/>
            </StackPanel>
        </Grid>
    </StackPanel>
</Page>
