<Window x:Class="TrucoClient.Views.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrucoClient.Views"
        xmlns:language="clr-namespace:TrucoClient.Properties.Langs"
        mc:Ignorable="d"
        
        Title="CustomMessageBox" Height="450" Width="800" FontFamily="Book Antiqua"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        WindowStartupLocation="CenterOwner" 
        ShowInTaskbar="False">

    <Window.Resources>
        <Style x:Key="ConfirmButtonStyle" TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontFamily" Value="Book Antiqua"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Margin" Value="15,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="10" Background="#FF2EF457" BorderThickness="2" BorderBrush="#FF03D400">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF5AF67A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CancelButtonStyle" TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontFamily" Value="Book Antiqua"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Margin" Value="15,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="10" Background="#FFFF9595" BorderThickness="2" BorderBrush="#FFBF3333">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFFFB5B5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    <Viewbox>
        <Border x:Name="brdAlertBackground" Width="660" Height="1000">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.5" BlurRadius="25" ShadowDepth="0"/>
            </Border.Effect>
            <Border.Background>
                <ImageBrush ImageSource="/Resources/Alerts/alert_template.png" Stretch="Uniform"/>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="140"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="txtMessage" Grid.Row="1"
                           Text="Example."
                           FontFamily="Book Antiqua" FontSize="45" FontWeight="ExtraBold"
                           TextWrapping="Wrap" TextAlignment="Center"
                           Foreground="#2A2019"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           MaxWidth="480" MaxHeight="400"
                           Margin="20,0"/>

                <StackPanel x:Name="ButtonsPanel" Grid.Row="2" Orientation="Horizontal" 
                            HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </Grid>
        </Border>
    </Viewbox>
</Window>