<Page x:Class="TrucoClient.Views.NewUserPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrucoClient"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:TrucoClient.Properties.Langs"
        Title="{x:Static language:Lang.StartTextSingUp}" FontFamily="Book Antiqua" FontSize="20" Height="800" 
      Width="600">

    <Border CornerRadius="40" BorderThickness="2" BorderBrush="#555" SnapsToDevicePixels="True">
        <Border.Background>
            <ImageBrush ImageSource="/Resources/wallpaper.png" Stretch="UniformToFill" Opacity=".8"/>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" Opacity="0.6" ShadowDepth="0" Color="Black"/>
        </Border.Effect>
        <StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="{x:Static language:Lang.GlobalTextNewUser}" FontSize="40" Margin="30,50,0,0" 
                           Foreground="White" Width="297" TextWrapping="Wrap"/>
                <Image Source="/Resources/Logos/logo.png" Width="200" Height="200" Margin="50,0,0,0"/>
            </StackPanel>
            <StackPanel Margin="10,1,10,0" Width="350">
                <TextBlock Text="{x:Static language:Lang.GlobalTextEmail}" Foreground="White"/>
                <TextBox x:Name="txtEmail" Cursor="Hand" TextChanged="TextBoxChanged" LostFocus="TextBoxLostFocus" 
                         KeyDown="EnterKeyDown">
                    <TextBox.Template>
                        <ControlTemplate TargetType="TextBox">
                            <Border Background="White" CornerRadius="8" BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="2" Padding="5">
                                <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                            </Border>
                        </ControlTemplate>
                    </TextBox.Template>
                </TextBox>
                <TextBlock x:Name="blckEmailError" Text=" " Foreground="Red" FontSize=" 15" TextWrapping="Wrap"/>
                <TextBlock Text="{x:Static language:Lang.GlobalTextUsername}" Margin="0,15,0,0" Foreground="White"/>
                <TextBox x:Name="txtUsername" Cursor="Hand" TextChanged="TextBoxChanged" LostFocus="TextBoxLostFocus" 
                         KeyDown="EnterKeyDown" PreviewTextInput="UsernamePreviewTextInput">
                    <TextBox.Template>
                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="White" CornerRadius="8" BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="2" Padding="5">
                                <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                            </Border>
                        </ControlTemplate>
                    </TextBox.Template>
                </TextBox>
                <TextBlock x:Name="blckUsernameError" Text=" " Foreground="Red" FontSize=" 15"/>
                <TextBlock Text="{x:Static language:Lang.GlobalTextPassword}" Margin="0,15,0,0" Foreground="White"/>
                <Grid x:Name="PasswordContainer" Width="350">
                    <PasswordBox x:Name="txtPassword" Cursor="Hand" Width="350" PasswordChanged="PasswordChanged" LostFocus="PasswordLostFocus" 
                            KeyDown="EnterKeyDown">
                        <PasswordBox.Template>
                            <ControlTemplate TargetType="PasswordBox">
                                <Border Background="White" CornerRadius="8" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="2" 
                                        Padding="5">
                                    <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
                        </PasswordBox.Template>
                    </PasswordBox>
                    <TextBox x:Name="txtVisiblePassword" Visibility="Collapsed" Width="350">
                        <TextBox.Template>
                            <ControlTemplate TargetType="TextBox">
                                <Border Background="White" CornerRadius="8" BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="2" Padding="5" Visibility="Visible">
                                    <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
                        </TextBox.Template>
                    </TextBox>
                    <Button x:Name="btnToggleVisibility" Click="ClickToggleVisibility" HorizontalAlignment="Right" 
                            VerticalAlignment="Center" Width="35" Height="30" Margin="0,0,10,0">
                        <TextBlock x:Name="blckEyeEmoji" Text="👁️" FontSize="21" Foreground="Black"/>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="14" BorderThickness="2" BorderBrush="Black">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
                <TextBlock x:Name="blckPasswordError" Text=" " Foreground="Red" FontSize=" 15" TextWrapping="Wrap"/>
                <TextBlock Text="{x:Static language:Lang.GlobalTextConfirmPassword}" Margin="0,15,0,0" Foreground="White"/>
                <Grid x:Name="ConfirmPasswordContainer" Width="350">
                    <PasswordBox x:Name="txtPasswordConfirm" Cursor="Hand" Width="350" PasswordChanged="PasswordChanged" 
                                LostFocus="PasswordLostFocus" KeyDown="EnterKeyDown">
                        <PasswordBox.Template>
                            <ControlTemplate TargetType="PasswordBox">
                                <Border Background="White" CornerRadius="8" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="2" 
                                        Padding="5">
                                    <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
                        </PasswordBox.Template>
                    </PasswordBox>
                    <TextBox x:Name="txtVisiblePasswordConfirm" Visibility="Collapsed" Width="350">
                        <TextBox.Template>
                            <ControlTemplate TargetType="TextBox">
                                <Border Background="White" CornerRadius="8" BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="2" Padding="5" Visibility="Visible">
                                    <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
                        </TextBox.Template>
                    </TextBox>
                    <Button x:Name="btnToggleVisibilityConfirm" Click="ClickToggleVisibility" HorizontalAlignment="Right" 
                             VerticalAlignment="Center" Width="35" Height="30" Margin="0,0,10,0">
                        <TextBlock x:Name="blckEyeEmojiConfirm" Text="👁️" FontSize="21" Foreground="Black"/>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="14" BorderThickness="2" BorderBrush="Black">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
                <TextBlock x:Name="blckPasswordConfirmError" Text=" " Foreground="Red" FontSize=" 15" TextWrapping="Wrap"/>
                <Button x:Name="btnRegister" Content="{x:Static language:Lang.GlobalTextCreateAccount}" Click="ClickRegister" 
                        Cursor="Hand" Margin="0,30,0,0" Width="240" FontSize="30" HorizontalAlignment="Center" IsEnabled="False">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="brdBorder" CornerRadius="10" Background="#FF5FE4FA" BorderThickness="2" BorderBrush="#FF3AB8CE">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="brdBorder" Property="Background" Value="#FFCCCCCC"/>
                                    <Setter TargetName="brdBorder" Property="BorderBrush" Value="#FF999999"/>
                                    <Setter Property="Foreground" Value="#FF666666"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
            <Button Click="ClickBack" Content="{x:Static language:Lang.GlobalTextBack}" Cursor="Hand" Margin="0,30,30,0" 
                    FontSize="30" HorizontalAlignment="Right">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="#FFFF9595" BorderThickness="2" BorderBrush="#FFBF3333">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Border>
</Page>
