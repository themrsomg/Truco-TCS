<Window x:Class="TrucoPrueba1.InitialWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrucoPrueba1"
        mc:Ignorable="d"
        Title="First" Height="1080" Width="1920" ResizeMode="NoResize" WindowState="Maximized" WindowStyle="None" AllowsTransparency="False" WindowStartupLocation="CenterScreen" Background="#FF6B6A6A" Icon="/Resources/app_logo.ico">
    <Border CornerRadius="40" BorderThickness="2" BorderBrush="#555" SnapsToDevicePixels="True">
        <Border.Background>
            <ImageBrush ImageSource="/Resources/wallpaper.png" Stretch="UniformToFill" Opacity="0.9"/>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" Opacity="0.6" ShadowDepth="0" Color="Black"/>
        </Border.Effect>
        <Grid Margin="10">
            <Frame x:Name="MainFrame" Source="InitialWindows.xaml" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Border>
</Window>
