<Page x:Class="TrucoPrueba1.PreGamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrucoPrueba1"
      mc:Ignorable="d" 
      Title="PlayPage" FontFamily="Book Antiqua" FontSize="30" Height="600" Width="800">

    <Page.Background>
        <ImageBrush ImageSource="Resources/wallpaper.png" Stretch="UniformToFill" Opacity=".7"/>
    </Page.Background>
    <StackPanel Margin="0,50,0,0">
        <TextBlock Text="PartidaVX" FontSize="40" FontWeight="Bold" Foreground="White" TextAlignment="Center" Margin="0,0,0,20"/>
        <StackPanel>
            <Button Click="ClickBuscarPartida" Content="Buscar Partida" Cursor="Hand" Width="350" Height="50" FontSize="24" Margin="0,50,0,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="#FF7ED957" BorderThickness="2" BorderBrush="#FF4CAF50">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Click="ClickInvitarAmigo" Content="Invitar Amigo" Cursor="Hand" Width="350" Height="50" FontSize="24" Margin="0,40,0,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="#FF70B8F0" BorderThickness="2" BorderBrush="#FF1565C0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Popup x:Name="popupCodigo" Placement="Center" StaysOpen="False" AllowsTransparency="True">
                <Border Background="#CC1E1E1E" CornerRadius="15" Padding="20" BorderBrush="White" BorderThickness="2">
                    <StackPanel Width="350" Height="200" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Comparte este código con tu amigo:" FontSize="20" Foreground="White" TextAlignment="Center"/>
                        <TextBlock x:Name="txtCodigoGenerado" FontSize="28" FontWeight="Bold" Foreground="#FF7ED957" TextAlignment="Center"/>
                        <Button Content="Cerrar" Width="100" Height="40" FontSize="18" HorizontalAlignment="Center" Click="ClickCerrarPopup"/>
                    </StackPanel>
                </Border>
            </Popup>
        </StackPanel>
        <Button Click="ClickBack" Content="Atrás" Cursor="Hand" Width="150" Height="50" FontSize="20" Margin="0,100,40,0" HorizontalAlignment="Right">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="10" Background="#FFFF9595" BorderThickness="2" BorderBrush="#FFBF3333">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </StackPanel>
</Page>
