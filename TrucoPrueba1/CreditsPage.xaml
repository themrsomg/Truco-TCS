<Page x:Class="TrucoPrueba1.CreditsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrucoPrueba1"
      mc:Ignorable="d" 
      Title="Credits" Height="500" Width="700" FontFamily="Book Antiqua" FontSize="30">

    <Page.Background>
        <ImageBrush ImageSource="/Resources/main_wallpaper.png" Stretch="UniformToFill" Opacity=".7"/>
    </Page.Background>
    <StackPanel>
        <TextBlock Text="Créditos" FontSize="40" Foreground="White" HorizontalAlignment="Center" Margin="0,40,0,0"/>
        <TextBlock Text="Esta va dedicada para Michell y Fefé" FontSize="30" Foreground="#cdd6b8" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap"/>
    </StackPanel>
</Page>
