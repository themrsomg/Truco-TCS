<Page x:Class="TrucoPrueba1.FriendsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrucoPrueba1"
      mc:Ignorable="d"
      xmlns:language="clr-namespace:TrucoPrueba1.Properties.Langs"
      Title="{x:Static language:Lang.GlobalTextFriends}" FontFamily="Book Antiqua" FontSize="30" Height="600" Width="800">

    <Page.Background>
        <ImageBrush ImageSource="/Resources/wallpaper.png" Stretch="UniformToFill" Opacity=".8"/>
    </Page.Background>
    <StackPanel>
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Text="{x:Static language:Lang.FriendsTextMyFriends}" FontSize="32" Foreground="Wheat" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,30,0,10"/>
                <ListBox x:Name="lstFriends" Margin="10" SelectionMode="Single" FontSize="20" Width="600" Height="250">
                    <!-- Ejemplo de items, se cambiarán a futuro -->
                    <ListBoxItem Content="Amigo 1" Margin="20,10,0,0"/>
                    <ListBoxItem Content="Amigo 2" Margin="20,5,0,0"/>
                    <ListBoxItem Content="Amigo 3" Margin="20,5,0,0"/>
                </ListBox>
            <Button x:Name="btnDelete" Content="{x:Static language:Lang.FriendsTextDeleteFriend}" Background="#CC0000" Foreground="White"
                        FontWeight="Bold" Height="40" Width="500" Margin="0,10,0,15"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBox x:Name="txtSearch" Width="300" Height="40" Text="{x:Static language:Lang.FriendsTextSearchUser}" Margin="0,0,10,0"/>
                <Button x:Name="btnAdd" Content="{x:Static language:Lang.FriendsTextAdd}" Background="#228B22" Foreground="White" FontWeight="Bold" Width="120" Height="50"/>
                </StackPanel>
            </StackPanel>
        <Button Click="ClickBack" Content="{x:Static language:Lang.GlobalTextBack}" Cursor="Hand" Margin="0,20,30,30" FontSize="25" HorizontalAlignment="Right">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="10" Background="#FFFF9595" BorderThickness="2" BorderBrush="#FFBF3333">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </StackPanel>
</Page>
