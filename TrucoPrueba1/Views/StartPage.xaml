<Page x:Class="TrucoPrueba1.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrucoPrueba1"
      mc:Ignorable="d"
      xmlns:language="clr-namespace:TrucoPrueba1.Properties.Langs"
      Title="{language:Loc GlobalTextTrucoArg}" Height="800" Width="600" FontFamily="Book Antiqua">

    <StackPanel>
        <ComboBox x:Name="cbLanguages" SelectionChanged="LanguageSelectionChanged" Cursor="" Width="110" HorizontalAlignment="Right" Margin="10,20,30,10" FontSize="14" Opacity=".8">
            <ComboBoxItem Content="{language:Loc en}"/>
            <ComboBoxItem Content="{language:Loc es}"/>
        </ComboBox>
        <Grid Height="380" Width="380">
            <Grid.Background>
                <ImageBrush ImageSource="/Resources/logo.png"/>
            </Grid.Background>
        </Grid>
        <StackPanel Margin="10,15,10,20" Width="500">
            <Button Click="ClickLogIn" Cursor="Hand" Margin="65,0,65,0" FontSize="40">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="#FF2EF457" BorderThickness="2" BorderBrush="#FF03D400">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Grid>
                    <TextBlock Text="{language:Loc StartTextLogIn}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="60,0,0,0"/>
                    <Image Source="/Resources/logo_login.png" Width="50" Height="50" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                </Grid>
            </Button>
            <Button Click="ClickPlayAsGuest" Cursor="Hand" Margin="0,20,0,0" FontSize="40">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="#FFF3C754" BorderThickness="2" BorderBrush="#FFDDA81C">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Grid>
                    <TextBlock Text="{language:Loc StartTextPlayAsGuest}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="60,0,0,0"/>
                    <Image Source="/Resources/logo_play_as_guest.png" Width="50" Height="50" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                </Grid>
            </Button>
            <Button Click="ClickSingUp" Cursor="Hand" Margin="50,20,50,0" FontSize="40">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="#FF5FE4FA" BorderThickness="2" BorderBrush="#FF3AB8CE">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Grid>
                    <TextBlock Text="{language:Loc StartTextSingUp}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="60,0,0,0"/>
                    <Image Source="/Resources/logo_new_user.png" Width="50" Height="50" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                </Grid>
            </Button>
        </StackPanel>
    </StackPanel>
</Page>
