<Page x:Class="TrucoClient.Views.CreateGamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrucoClient.Views"
      mc:Ignorable="d" 
      xmlns:language="clr-namespace:TrucoClient.Properties.Langs"
      Title="{x:Static language:Lang.GameTextCreateMatch}" FontFamily="Book Antiqua" FontSize="30" Height="600" Width="800">

    <Border CornerRadius="40" BorderThickness="2" BorderBrush="#555" SnapsToDevicePixels="True">
        <Border.Background>
            <ImageBrush ImageSource="/Resources/wallpaper.png" Stretch="UniformToFill" Opacity="1"/>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" Opacity="0.6" ShadowDepth="0" Color="Black"/>
        </Border.Effect>
        <StackPanel Margin="0,50,0,0">
            <TextBlock Text="{x:Static language:Lang.GameTextCreateMatch}" FontSize="40" 
                        Foreground="White" TextAlignment="Center" Margin="0,0,0,20"/>
            <StackPanel>
                <Button Click="ClickInviteFriend" Content="{x:Static language:Lang.GameTextGenerateInvitationCode}" 
                        Cursor="Hand" Width="350" Height="50" FontSize="24" Margin="0,40,0,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="10" Background="#FF5FE4FA" BorderThickness="2" BorderBrush="#FF3AB8CE">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Popup x:Name="popupCode" Placement="Center" StaysOpen="False" AllowsTransparency="True">
                    <Border Background="#CC1E1E1E" CornerRadius="15" Padding="20" BorderBrush="White" BorderThickness="2">
                        <StackPanel Width="350" Height="200" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="{x:Static language:Lang.PreGameShareCode}" FontSize="20" Foreground="White" TextAlignment="Center"/>
                            <TextBlock x:Name="txtGeneratedCode" FontSize="28" FontWeight="Bold" Foreground="#FF2EF457" TextAlignment="Center"/>
                            <Button Content="{x:Static language:Lang.GlobalTextClose}" Width="100" 
                                    Height="40" FontSize="18" HorizontalAlignment="Center" Click="ClickClosePopup"/>
                        </StackPanel>
                    </Border>
                </Popup>
            </StackPanel>
            <Button Click="ClickBack" Content="{x:Static language:Lang.GlobalTextBack}" Cursor="Hand" 
                    Margin="0,60,40,30" FontSize="25" HorizontalAlignment="Right">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="#FFFF9595" BorderThickness="2" BorderBrush="#FFBF3333">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Border>
</Page>