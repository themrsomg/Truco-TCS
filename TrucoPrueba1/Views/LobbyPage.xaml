<Page x:Class="TrucoPrueba1.Views.LobbyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrucoPrueba1.Views"
      mc:Ignorable="d" 
      xmlns:language="clr-namespace:TrucoPrueba1.Properties.Langs"
      Title="{x:Static language:Lang.PreGameTextGame}" FontFamily="Book Antiqua" FontSize="30" Height="600" Width="800">

    <Page.Background>
        <ImageBrush ImageSource="/Resources/wallpaper.png" Stretch="UniformToFill" Opacity=".7"/>
    </Page.Background>
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="txtLobbyTitle" Grid.Row="0" Grid.ColumnSpan="2" Text="Lobby - Partida" FontSize="30" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
            <TextBlock Text="Jugadores en sala" Foreground="White" FontSize="22" Margin="0,0,0,15"/>
            <ItemsControl x:Name="PlayersList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Image Width="50" Height="50" Source="{Binding AvatarUri}" Margin="0,0,10,0" Stretch="UniformToFill"/>
                            <TextBlock Text="{Binding Username}" VerticalAlignment="Center" Foreground="White" FontSize="18"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
        
        <StackPanel Grid.Row="1" Grid.Column="1">
            <TextBlock Text="Chat del Lobby" Foreground="White" FontSize="22" Margin="0,0,0,20"/>
            <ScrollViewer x:Name="ChatScroll" Background="White" VerticalScrollBarVisibility="Auto" Height="300" Margin="0,0,0,10">
                <StackPanel x:Name="ChatMessagesPanel" Margin="5"/>
            </ScrollViewer>
            <StackPanel Orientation="Horizontal">
                <Grid Width="380" Height="30" Margin="0,0,5,0">
                    <TextBox x:Name="txtChatMessage" Width="375" Height="30" FontSize="22" TextChanged="txtChatMessageTextChanged"/>
                    <TextBlock x:Name="PlaceholderText" Text="{x:Static language:Lang.GlobalTextWriteHere}" Height="30" Foreground="Gray" FontSize="22" Margin="10,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False" Visibility="Visible"/>
                </Grid>
                <Button Content="{x:Static language:Lang.GlobalTextSend}" FontSize="22" Click="ClickSendMessage" Cursor="Hand" Height="40">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="10" Background="#FF5FE4FA" BorderThickness="2" BorderBrush="#FF5FE4FA">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </StackPanel>
        
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,5,20">
            <Button Click="ClickExit" Content="{x:Static language:Lang.GlobalTextExit}" Cursor="Hand" Margin="0,0,20,0" FontSize="22">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="#FFFF9595" BorderThickness="2" BorderBrush="#FFBF3333" Padding="10,5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            
            <Button x:Name="btnStart" Click="ClickStartGame" Content="{x:Static language:Lang.GlobalTextStartGame}" Cursor="Hand" FontSize="22">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="#FF2EF457" BorderThickness="2" BorderBrush="#FF03D400" Padding="10,5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Page>
