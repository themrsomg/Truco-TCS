<Page x:Class="TrucoPrueba1.CreditsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrucoPrueba1"
      mc:Ignorable="d"
      xmlns:language="clr-namespace:TrucoPrueba1.Properties.Langs"
      Title="{x:Static language:Lang.SettingsTextCredits}" Height="600" Width="800" FontFamily="Book Antiqua" FontSize="30">

    <Border CornerRadius="40" BorderThickness="2" BorderBrush="#555" SnapsToDevicePixels="True">
        <Border.Background>
            <ImageBrush ImageSource="/Resources/wallpaper.png" Stretch="UniformToFill" Opacity="1"/>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" Opacity="0.6" ShadowDepth="0" Color="Black"/>
        </Border.Effect>
        <StackPanel>
            <TextBlock Text="{x:Static language:Lang.SettingsTextCredits}" FontSize="41" Foreground="White" 
                       HorizontalAlignment="Center" Margin="0,30,0,0"/>
            <TextBlock Text="{x:Static language:Lang.CreditsTextProducers}" FontSize="36" Foreground="#cdd634" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap"/>
            <TextBlock Text="Genaro Alejandro Barradas Sánchez" FontSize="26" Foreground="White"
                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap"/>
            <TextBlock Text="Omar Morales García" FontSize="26" Foreground="White"
                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,15,0,0" TextWrapping="Wrap"/>
            <TextBlock Text="{x:Static language:Lang.CreditsTextCreativeDesign}" FontSize="36" Foreground="#cdd634" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap"/>
            <TextBlock Text="Chat-GPT" FontSize="26" Foreground="White"
                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap"/>
            <TextBlock Text="Gemini" FontSize="26" Foreground="White"
                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,15,0,0" TextWrapping="Wrap"/>
            <Button Click="ClickBack" Content="{x:Static language:Lang.GlobalTextBack}" Cursor="Hand" Margin="0,20,30,30" 
                    FontSize="26" HorizontalAlignment="Right">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="#FFFF9595" BorderThickness="2" BorderBrush="#FFBF3333">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Click="ClickEgg" Content="^" Cursor="Hand" Margin="20,-45,0,30" FontSize="5" HorizontalAlignment="Left">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="0" Background="#FAF49535" BorderThickness="2" BorderBrush="#FAF49535">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Border>
</Page>
