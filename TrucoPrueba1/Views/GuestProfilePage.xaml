<Page x:Class="TrucoPrueba1.Views.GuestProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrucoPrueba1.Views"
      mc:Ignorable="d"
      xmlns:language="clr-namespace:TrucoPrueba1.Properties.Langs"
      Title="{x:Static language:Lang.UserProfileGuestTextTitle}" FontFamily="Book Antiqua" FontSize="20" Height="760" Width="600">
    
    <Border CornerRadius="40" BorderThickness="2" BorderBrush="#555" SnapsToDevicePixels="True">
        <Border.Background>
            <ImageBrush ImageSource="/Resources/wallpaper.png" Stretch="UniformToFill" Opacity=".8"/>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" Opacity="0.6" ShadowDepth="0" Color="Black"/>
        </Border.Effect>
        <StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="{x:Static language:Lang.UserProfileGuestTextTitle}" FontSize="40" 
                           Margin="30,50,0,0" Foreground="White" Width="297" TextWrapping="Wrap"/>
                <Image Source="/Resources/logo.png" Width="170" Height="170" Margin="50,0,0,0"/>
            </StackPanel>
            <StackPanel Margin="10,20,10,0" Width="580">
                <TextBlock Text="{x:Static language:Lang.UserProfileGuestTextInstructions}" Foreground="White" 
                           Width="560" TextWrapping="Wrap" FontSize="18"/>
                <Button Click="ClickLogIn" Cursor="Hand" Margin="120,20,120,0" FontSize="30">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="10" Background="#FF2EF457" BorderThickness="2" BorderBrush="#FF03D400">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Grid>
                        <TextBlock Text="{language:Loc StartTextLogIn}" VerticalAlignment="Center" 
                                   HorizontalAlignment="Left" Margin="60,0,0,0"/>
                        <Image Source="/Resources/logo_login.png" Width="50" Height="50" HorizontalAlignment="Left" 
                               VerticalAlignment="Center"/>
                    </Grid>
                </Button>
                <Button Click="ClickSingUp" Cursor="Hand" Margin="90,10,90,0" FontSize="30">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="10" Background="#FF5FE4FA" BorderThickness="2" BorderBrush="#FF3AB8CE">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Grid>
                        <TextBlock Text="{language:Loc StartTextSingUp}" VerticalAlignment="Center" 
                                   HorizontalAlignment="Left" Margin="60,0,0,0"/>
                        <Image Source="/Resources/logo_new_user.png" Width="50" Height="50" HorizontalAlignment="Left" 
                               VerticalAlignment="Center"/>
                    </Grid>
                </Button>
                <Button Click="ClickBack" Content="{x:Static language:Lang.GlobalTextNoThanks}" Cursor="Hand" 
                        Margin="0,30,00,0" FontSize="25" HorizontalAlignment="Center">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="10" Background="#FFF3C754" BorderThickness="2" BorderBrush="#FFDDA81C">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Page>
