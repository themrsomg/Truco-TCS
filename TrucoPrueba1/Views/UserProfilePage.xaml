<Page x:Class="TrucoPrueba1.UserProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Title="UserProfilePage" FontFamily="Book Antiqua" FontSize="30" Height="600" Width="800">

    <Page.Background>
        <ImageBrush ImageSource="/Resources/main_wallpaper.png" Stretch="UniformToFill" Opacity=".7"/>
    </Page.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Perfil" FontSize="40" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,129">
            <StackPanel HorizontalAlignment="Center" Width="300" Margin="0,10,0,10">

                <Button Content="Avatar" Width="120" Height="120" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="#DDD" CornerRadius="60" BorderBrush="Gray" BorderThickness="1">
                                <Image Source="/Resources/logo.png" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Image.Clip>
                                        <EllipseGeometry Center="60,60" RadiusX="60" RadiusY="60" />
                                    </Image.Clip>
                                </Image>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <StackPanel Margin="0,20,0,10">
                    <TextBlock Text="Nombre de usuario" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBox x:Name="txtUsername" Margin="0,5,0,0"/>
                    <TextBlock x:Name="txtUsernameWarning" 
                               Text="Te quedan X cambios de nombre." 
                               Foreground="Yellow" 
                               HorizontalAlignment="Center" 
                               FontSize="18" 
                               Margin="0,5,0,0" 
                               Visibility="Collapsed"/>
                </StackPanel>

                <StackPanel Margin="0,10,0,10">
                    <TextBlock Text="Correo electrónico" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBox x:Name="txtEmail" Margin="0,5,0,0" IsReadOnly="True" Background="#DDEEEE"/>
                </StackPanel>

                <StackPanel Margin="0,10,0,10">
                    <TextBlock Text="Redes sociales" TextAlignment="Center" Foreground="White" HorizontalAlignment="Center" Width="417"/>

                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,10,0,0">

                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <Image Source="/Resources/SocialNetworks/facebook_logo.png" Width="30" Height="30" Margin="0,0,10,0"/>
                            <TextBox x:Name="txtFacebookLink" Width="300"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <Image Source="/Resources/SocialNetworks/x_logo.png" Width="30" Height="30" Margin="0,0,10,0"/>
                            <TextBox x:Name="txtXLink" Width="300"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <Image Source="/Resources/SocialNetworks/Instagram_logo.png" Width="30" Height="30" Margin="0,0,10,0"/>
                            <TextBox x:Name="txtInstagramLink" Width="300"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <StackPanel Margin="0,10,0,10">
                    <TextBlock Text="Links de Perfil" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                        <TextBlock x:Name="linkFacebookContainer" Margin="5,0" Visibility="Collapsed">
                            <Hyperlink x:Name="linkFacebook" RequestNavigate="Hyperlink_RequestNavigate">
                                <Image Source="/Resources/SocialNetworks/facebook_logo.png" Width="30" Height="30"/>
                            </Hyperlink>
                        </TextBlock>

                        <TextBlock x:Name="linkXContainer" Margin="5,0" Visibility="Collapsed">
                            <Hyperlink x:Name="linkX" RequestNavigate="Hyperlink_RequestNavigate">
                                <Image Source="/Resources/SocialNetworks/x_logo.png" Width="30" Height="30"/>
                            </Hyperlink>
                        </TextBlock>

                        <TextBlock x:Name="linkInstagramContainer" Margin="5,0" Visibility="Collapsed">
                            <Hyperlink x:Name="linkInstagram" RequestNavigate="Hyperlink_RequestNavigate">
                                <Image Source="/Resources/SocialNetworks/Instagram_logo.png" Width="30" Height="30"/>
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>

                <StackPanel Margin="0,20,0,20">
                    <Button x:Name="btnChangePassword" 
                            Click="ClickChangePassword" 
                            Content="Cambiar contraseña" 
                            Width="280" 
                            Height="50"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <Grid Grid.Row="1" Margin="0,424,0,18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" Click="ClickSave" Content="Guardar" Cursor="Hand" FontSize="25" Width="120" Height="40">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="#FF5FE4FA" BorderThickness="2" BorderBrush="#FF5FE4FA">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Grid.Column="3" Click="ClickBack" Content="Atrás" Cursor="Hand" FontSize="25" Width="120" Height="40">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="#FFFF9595" BorderThickness="2" BorderBrush="#FFBF3333">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</Page>