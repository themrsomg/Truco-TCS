<Page x:Class="TrucoPrueba1.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrucoPrueba1"
      mc:Ignorable="d"
      xmlns:language="clr-namespace:TrucoPrueba1.Properties.Langs"
      Title="{x:Static language:Lang.GlobalTextTrucoArg}" Height="800" Width="600" FontFamily="Book Antiqua">

    <Page.Background>
        <ImageBrush ImageSource="wallpaper.png" Stretch="UniformToFill" Opacity=".7"/>
    </Page.Background>
    <StackPanel>
        <ComboBox x:Name="cbLanguages" SelectionChanged="Language_Selection_Changed" Cursor="Hand" Width="110" HorizontalAlignment="Right" Margin="10,20,30,10" FontSize="14" Opacity=".8">
            <ComboBoxItem Content="{x:Static language:Lang.en}"/>
            <ComboBoxItem Content="{x:Static language:Lang.es}"/>
        </ComboBox>
        <Grid Height="380" Width="380">
            <Grid.Background>
                <ImageBrush ImageSource="/logo.png"/>
            </Grid.Background>
        </Grid>
        <StackPanel Margin="10,15,10,20" Width="400">
            <Button Click="ClickLogIn" Content="{x:Static language:Lang.StartTextLogIn}" Cursor="Hand" Margin="15,0,15,0" FontSize="40">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="#FF2EF457" BorderThickness="2" BorderBrush="#FF03D400">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Click="ClickPlayAsGuest" Content="{x:Static language:Lang.StartTextPlayAsGuest}" Cursor="Hand" Margin="0,5,0,0" FontSize="40">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="#FFF3C754" BorderThickness="2" BorderBrush="#FFDDA81C">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Click="ClickSingUp" Content="{x:Static language:Lang.StartTextSingUp}" Cursor="Hand" Margin="15,20,15,0" FontSize="40">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="#FF5FE4FA" BorderThickness="2" BorderBrush="#FF3AB8CE">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </StackPanel>
</Page>
