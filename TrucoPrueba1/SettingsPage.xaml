<Page x:Class="TrucoPrueba1.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrucoPrueba1"
      mc:Ignorable="d" 
      Title="Settings" Height="600" Width="800" FontFamily="Book Antiqua" FontSize="30">

    <Page.Background>
        <ImageBrush ImageSource="Resources/Wallpaper.png" Stretch="UniformToFill" Opacity=".7"/>
    </Page.Background>
    <StackPanel>
        <TextBlock Text="Configuración" Margin="0,40,0,0" FontSize="40" Foreground="White" HorizontalAlignment="Center"/>
        <TextBlock Text=" "/>
        <StackPanel Margin="10,15,10,20" Width="500">
            <Button Click="ClickCredits" Content="Créditos" Cursor="Hand" Margin="65,0,65,0" FontSize="40">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="#FF2EF457" BorderThickness="2" BorderBrush="#FF03D400">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <TextBlock Text=" "/>
            <Button Click="ClickAbout" Content="Acerca de" Cursor="Hand" Margin="65,0,65,0" FontSize="40">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="#FFF3C754" BorderThickness="2" BorderBrush="#FFDDA81C">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <TextBlock Text="Volumen" FontSize="40" Foreground="White" HorizontalAlignment="Center" Margin="0,20,0,0"/>
            <Button Click="ClickVolume" Cursor="Hand" Margin="100,10,100,0" FontSize="40" Height="120" Width="120">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="Transparent" BorderThickness="2" BorderBrush="Transparent">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Grid>
                    <Image Source="/Resources/app_logo.ico" Width="120" Height="120" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
                <!--Cambiar imagen por Mute / Unmute-->
            </Button>
        </StackPanel>
        <Button Click="ClickSave" Content="Guardar" Cursor="Hand" Margin="0,0,45,0" FontSize="30" HorizontalAlignment="Right">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="10" Background="#FF5FE4FA" BorderThickness="2" BorderBrush="#FF3AB8CE">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </StackPanel>
</Page>
